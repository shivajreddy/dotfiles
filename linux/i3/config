        # }
}

###### PAUSE i3 keybindings
# Custom mode for pausing keybindings
mode "paused" {
    bindsym $mod+Shift+p mode "default"
}
# Keybinding to toggle pausing
bindsym $mod+Shift+p exec --no-startup-id ~/.config/i3/toggle-pause.sh

