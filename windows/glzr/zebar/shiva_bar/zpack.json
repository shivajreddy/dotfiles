{
  "$schema": "https://github.com/glzr-io/zebar/raw/v3.1.1/resources/zpack-schema.json",
  "name": "shiva_bar",
  "version": "0.0.0",
  "description": "",
  "tags": [],
  "previewImages": [],
  "repositoryUrl": "",
  "widgets": [
    {
      "name": "main",
      "htmlPath": "./shiva_bar.html",
      "zOrder": "top_most",
      "shownInTaskbar": false,
      "focused": false,
      "resizable": false,
      "transparent": true,
      "includeFiles": [
        "**/**"
      ],
      "caching": {
        "defaultDuration": 604800,
        "rules": []
      },
      "privileges": {
        "shellCommands": []
      },
      "presets": [
        {
          "name": "default",
          "anchor": "bottom_center",
          "offsetX": "0px",
          "offsetY": "0px",
          "width": "100%",
          "height": "44px",
          "monitorSelection": {
            "type": "all"
          },
          "dockToEdge": {
            "enabled": true,
            "edge": "bottom",
            "windowMargin": "0px"
          }
        }
      ]
    }
  ]
}
