{
  "$schema": "https://github.com/glzr-io/zebar/raw/v2.4.0/resources/widget-schema.json",
  "htmlPath": "./shiva_bar.html",
  "zOrder": "normal",
  "shownInTaskbar": false,
  "focused": false,
  "resizable": false,
  "transparent": true,
  "presets": [
    {
      "name": "default",
      "anchor": "top_center",
      "offsetX": "0px",
      "offsetY": "0px",
      "width": "100%",
      "height": "34px",
      "monitorSelection": {
        "type": "all"
      },
      "dockToEdge": {
        "enabled": true,
        "edge": "top",
        "windowMargin": "0px"
      }
    }
  ]
}
